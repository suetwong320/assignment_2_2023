<%- include ../partials/header.ejs %>

<%- include ../partials/top_nav.ejs %>
 
<main class="container">
    <br>
    <a href="/project/add" class="btn btn-primary"><i class="fa-solid fa-plus fa-lg"></i> Add</a>
    <br>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
              <th scope="col">Title</th>
              <th scope="col">Description</th>
              <th scope="col">Deadline</th>
              <th scope="col">Update</th>
            </tr>
          </thead>
          <tbody>
            <% for (let index = 0; index < ProjectList.length; index++) { %>
                <tr>
                    <td><%= ProjectList[index].title %></td>
                    <td><%= ProjectList[index].description %></td>
                    <td><%= ProjectList[index].deadline %></td>
                    <td>
                      <a href="/project/edit/<%= ProjectList[index].id %>" class="btn btn-info btn-sm"></i> Update</a>
                    </td>
                </tr>
            <% } %>
          </tbody>
    </table>
</main>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>